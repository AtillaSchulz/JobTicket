<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:pe="http://primefaces.org/ui/extensions">

<f:view contentType="text/html" locale="de">
	<pe:head title="Empty-Title"
		shortcutIcon="#{request.contextPath}/favicon.ico">
		<f:facet name="first">
			<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
			<meta http-equiv="pragma" content="no-cache" />
			<meta http-equiv="cache-control" content="no-cache" />
			<meta http-equiv="expires" content="0" />
		</f:facet>
		<link type="text/css" rel="stylesheet" href="/Job_Ticket/style.css" />
	</pe:head>

	<h:body>
		<pe:ajaxErrorHandler />
		<h:form style="padding-left:25%">
			<p:panelGrid id="mainGrid">
				<p:row>
					<p:column>
						<h:outputLabel value="Eingangsdatum" for="eingangsDatum" />
					</p:column>

					<p:column>
						<p:inputMask id="eingangsDatum" mask="99.99.9999"
							value="#{produktBean.eingang}" />
					</p:column>

					<p:column>
						<h:outputLabel value="Vorlagedatum" for="vorlageDatum" />
					</p:column>

					<p:column>
						<p:inputMask id="vorlageDatum" mask="99.99.9999"
							value="#{produktBean.vorlage}" />
					</p:column>

				</p:row>
				<p:row>
					<p:column>
						<h:outputLabel value="Fertigstellung" for="fertigstellungsDatum" />
					</p:column>

					<p:column>
						<p:inputMask id="fertigstellungsDatum" mask="99.99.9999"
							value="#{produktBean.ausgang}" />
					</p:column>
				</p:row>

				<p:row>
					<p:column>
						<h:outputLabel value="Beschreibung" for="beschreibung" />
					</p:column>

					<p:column colspan="3">
						<p:inputTextarea id="beschreibung" autoResize="true"
							value="#{produktBean.produktbeschreibung}" style="width:98%" />
					</p:column>
				</p:row>


				<p:row>
					<p:column></p:column>
					<p:column>
						<p:commandButton value="#{produktBean.printButtonText}"
							actionListener="#{produktBean.togglePrint}" update="mainGrid" />
					</p:column>
					<p:column rendered="#{produktBean.showPrint}">
						<h:outputLabel value="Seitenzahl" for="seitenzahl" />
					</p:column>
					<p:column rendered="#{produktBean.showPrint}">
						<p:inputText id="seitenzahl" value="#{produktBean.seitenzahl}" />
					</p:column>
				</p:row>

				<p:row rendered="#{produktBean.showPrint}">
					<p:columns>
						<h:outputLabel value="Format" for="format" />
					</p:columns>
					<p:columns>
						<p:inputText id="format" value="#{produktBean.format}" />
					</p:columns>
					<p:columns>
						<h:outputLabel value="Falzung" for="falzung" />
					</p:columns>
					<p:columns>
						<h:selectOneMenu id="falzung" value="#{produktBean.falzung}">
							<f:selectItem itemLabel="Select One" itemValue="" />
							<f:selectItems value="#{produktBean.falzungsarten}" />
						</h:selectOneMenu>
					</p:columns>
				</p:row>

				<p:row rendered="#{produktBean.showPrint}">
					<p:columns>
						<h:outputLabel value="Beschnitt" for="beschnitt" />
					</p:columns>
					<p:columns>
						<p:inputText id="beschnitt" value="#{produktBean.beschnitt}" />
					</p:columns>
					<p:columns>
						<h:outputLabel value="Bindung" for="bindung" />
					</p:columns>
					<p:columns>
						<p:inputText id="bindung" value="#{produktBean.bindung}" />
					</p:columns>
				</p:row>
				<p:row rendered="#{produktBean.showPrint}">
					<p:columns>
						<h:outputLabel value="Farbe" for="farbe" />
					</p:columns>
					<p:columns>
						<p:inputText id="farbe" value="#{produktBean.farbe}" />
					</p:columns>
					<p:columns>
						<h:outputLabel value="Proof" for="proof" />
					</p:columns>
					<p:columns>
						<p:inputText id="proof" value="#{produktBean.proof}" />
					</p:columns>
				</p:row>
				<p:row rendered="#{produktBean.showPrint}">
					<p:columns>
						<h:outputLabel value="Sonderfarbe" for="sonderfarbe" />
					</p:columns>
					<p:columns>
						<p:inputText id="sonderfarbe" value="#{produktBean.sonderfarbe}" />
					</p:columns>
					<p:columns>
						<h:outputLabel value="Dummy" for="dummy" />
					</p:columns>
					<p:columns>
						<p:inputText id="dummy" value="#{produktBean.dummy}" />
					</p:columns>
				</p:row>
				<p:row>
					<p:column>
						<p:commandButton value="+" styleClass="plusButton" />
						<p:commandButton value="-" styleClass="minusButton" />
					</p:column>
				</p:row>
				<p:row>
					<p:columns>
					</p:columns>
					<p:columns>
					</p:columns>
					<p:columns>
					</p:columns>
					<p:columns>
						<p:commandButton value="Speichern" styleClass="speicherButton"
							actionListener="#{produktBean.erstelleProdukt}" />
					</p:columns>
				</p:row>
			</p:panelGrid>
		</h:form>
	</h:body>
</f:view>
</html>